{
  "name": "MySQL Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:latest",
  "features": {
    "mysql": {
      "version": "latest",
      "db": "mibase1",
      "user": "root",
      "password": "Canada",
      "rootPassword": "Canada"
    }
  },
  "settings": {
    "mysql.defaultConnection": {
      "host": "localhost",
      "user": "root",
      "password": "Canada",
      "database": "mibase1"
    }
  },
  "forwardPorts": [3306],
  "postCreateCommand": "echo 'MySQL está configurado con la base de datos mibase1 y el usuario root con contraseña Canada.'"
}
